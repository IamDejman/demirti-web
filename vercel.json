{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "crons": [
    {
      "path": "/api/cron/analytics",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/announcements",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/cron/assignment-deadlines",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/certificates",
      "schedule": "30 2 * * *"
    }
  ]
}
